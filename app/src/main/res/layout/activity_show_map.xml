<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rushro2m.gaodemap.ShowMapActivity">

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <CheckBox
        android:id="@+id/check_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启个性化地图"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/basicmap"
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_map_poi"
            android:gravity="center"
            android:text="标准地图"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/wxmap"
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_map_poi"
            android:gravity="center"
            android:text="卫星模式"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/nightmap"
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_map_poi"
            android:gravity="center"
            android:text="夜间模式"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/navimap"
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_map_poi"
            android:gravity="center"
            android:text="导航模式"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>
